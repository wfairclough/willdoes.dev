---
const { id, label, to, value } = Astro.props;
---

<div class="contact-field">
  <span class="label">{label}</span>
  <div class="sep"></div>
  <a aria-labelledby={id} href={to}>{value}</a>
  <label id={id} class="sr-only">Contact by {label} - {value}</label>
</div>

<style>
  .contact-field {
    display: grid;
    grid-template-columns: min-content auto min-content;
    font-weight: 100;
    color: var(--wf-text-color-light);
    white-space: nowrap;
  }

  .sep {
    width: auto;
    height: 1px;
    background-color: var(--wf-text-color-dark);
    margin-inline: 1rem;
    align-self: center;
    transform: translateY(2px);
  }

  a {
    display: inline-block;
    color: var(--wf-tertiary-color);
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }
</style>
